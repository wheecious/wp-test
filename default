server {
        listen 80 default_server;
        listen [::]:80 default_server;
        location ~ \.php$ {
            include snippets/fastcgi-php.conf;
            fastcgi_pass unix:/run/php/php-fpm.sock ;
        }
        index index.php;
        root /var/www/html;
        server_name _;
        location / {
                try_files $uri $uri/ =404;
        }
        location /basic_status {
                stub_status;
                allow 127.0.0.1;
                deny all;
        }
}
